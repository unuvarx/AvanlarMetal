<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - Avanlar Metal</title>
    <!-- Favicons -->
    <link href="~/uploads/template/img/favicon.png" rel="icon">
    <link href="~/uploads/template/img/apple-touch-icon.png" rel="apple-touch-icon">

    <!-- Fonts -->
    <link href="https://fonts.googleapis.com" rel="preconnect">
    <link href="https://fonts.gstatic.com" rel="preconnect" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Raleway:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">

    <!-- Vendor CSS Files -->
    <link href="~/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
   

    <!-- Main CSS File -->
    <link href="~/css/main.css" rel="stylesheet">
    <link href="~/css/site.css" rel="stylesheet">

</head>
<body class="admin">
<header id="admin">
    <div class="buttons">
        <a href="/admin/home" class="btn btn-danger">Anasayfa</a>
        <a href="/admin/listofcategory" class="btn btn-warning">Kategori Listesi</a>
        <a href="/admin/addcategory" class="btn btn-primary">Kategori Ekle</a>
        <a href="/admin/addproduct" class="btn btn-secondary">Ürün Ekle</a>
        <a href="/admin/contacts" class="btn btn-success mail-btn"><label for="">Mailler</label> -  @{
                                                                                  if (ViewBag.MailNumber != null)
                                                                                  {
                                                                                      <span>@ViewBag.MailNumber</span>
                                                                                  }
                                                                              }</a>
    </div>
</header>

<main class="main">
    @RenderBody()
</main>




<!-- Vendor JS Files -->
<script src="~/lib/jquery/dist/jquery.min.js"></script>

<script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>




@await RenderSectionAsync("Scripts", required: false)
</body>
</html>