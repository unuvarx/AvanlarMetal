@{
    ViewBag.Title = "Anasayfa";
    Layout = "_Layout";
}

<!-- Hero Section -->
<section id="hero" class="hero section dark-background">

    <div id="hero-carousel" class="carousel slide carousel-fade" data-bs-ride="carousel" data-bs-interval="5000">

        <div class="carousel-item active">
            <img class="img-dark" src="~/uploads/template/img/hero-carousel/hero-carousel-1.png" alt="">
            <div class="carousel-container">
                <h2>Avanlar Metal<br></h2>
                <p class="text-center">Demir kapı, ferforje korkuluk ve metal işleriyle estetik ve dayanıklılığı bir araya getiriyoruz. Kaliteli
                    işçilik ve uygun fiyatlarla hizmetinizdeyiz.</p>
                <a href="/hizmetlerimiz" class="btn-get-started">Hizmetlerimiz</a>
            </div>
        </div><!-- End Carousel Item -->
        <div class="carousel-item">
            <img class="img-dark" src="~/uploads/template/img/hero-carousel/hero-carousel-2.png" alt="">
            <div class="carousel-container">
                <h2>Dayanıklı ve Şık Çözümler</h2>
                <p class="text-center">Güçlü demir kapılar, zarif ferforje korkuluklar ve özel tasarım metal projeleriyle mekanlarınıza değer
                    katıyoruz.</p>
                <a href="/projelerimiz" class="btn-get-started">Projelerimiz</a>

            </div>
        </div><!-- End Carousel Item -->

        <div class="carousel-item">
            <img class="img-dark" src="~/uploads/template/img/hero-carousel/hero-carousel-3.png" alt="">
            <div class="carousel-container">
                <h2>Kalite ve Güvenin Adresi</h2>
                <p class="text-center">Yılların tecrübesiyle sizlere en iyi metal işçiliğini sunuyoruz. Projelerinize özel çözümler ve müşteri
                    memnuniyeti önceliğimizdir.</p>
                <a href="/iletisim" class="btn-get-started">İletişime Geç</a>

            </div>
        </div>

        <!-- End Carousel Item -->

        <a class="carousel-control-prev" href="#hero-carousel" role="button" data-bs-slide="prev">
            <span class="carousel-control-prev-icon bi bi-chevron-left" aria-hidden="true"></span>
        </a>

        <a class="carousel-control-next" href="#hero-carousel" role="button" data-bs-slide="next">
            <span class="carousel-control-next-icon bi bi-chevron-right" aria-hidden="true"></span>
        </a>

        <ol class="carousel-indicators"></ol>

    </div>

</section><!-- /Hero Section -->



<!-- About Section -->
<section id="about" class="about section">

    <!-- Bölüm Başlığı -->
    <div class="container section-title" data-aos="fade-up">
        <h2>Hakkımızda</h2>
        <p>Avanlar Metal</p>
    </div><!-- Bölüm Başlığı Sonu -->

    <div class="container">

        <div class="row gy-4">

            <div class="col-lg-6 content" data-aos="fade-up" data-aos-delay="100">
                <p>
                    Avanlar Metal olarak yılların tecrübesi ve ustalığıyla metal işçiliğinde kaliteyi sizlerle buluşturuyoruz.
                    Güçlü yapılar, estetik tasarımlar ve uzun ömürlü çözümler üreterek, projelerinize değer katıyoruz.
                </p>
                <ul>
                    <li><i class="bi bi-check2-circle"></i> <span>Özel tasarım demir kapı, ferforje korkuluk ve metal işleri</span></li>
                    <li><i class="bi bi-check2-circle"></i> <span>Kaliteli malzeme, usta işçilik ve müşteri memnuniyeti odaklı üretim</span></li>
                    <li><i class="bi bi-check2-circle"></i> <span>Modern ve klasik tasarımlarla mekanlarınıza şıklık katıyoruz</span></li>
                </ul>
            </div>

            <div class="col-lg-6" data-aos="fade-up" data-aos-delay="200">
                <p>
                    Dayanıklı, güvenilir ve estetik çözümlerle her ihtiyacınıza uygun metal işçiliği sunuyoruz.
                    Projenize özel tasarımlar ve profesyonel ekibimizle en iyi hizmeti sağlamak için buradayız.
                    Sizin için üretiyor, hayallerinizi şekillendiriyoruz!
                </p>
                <a href="/hakkimizda" class="read-more"><span>Daha Fazla Bilgi</span><i class="bi bi-arrow-right"></i></a>
            </div>

        </div>

    </div>

</section>

<!-- /About Section -->


<!-- Clients Section -->
<section id="clients" class="clients section light-background">

    <div class="container" data-aos="fade-up">

        <div class="row gy-4">

            <div class="client-logo">
                <img src="~/uploads/template/img/clients/metaller.jpg" class="img-fluid" alt="">
            </div><!-- End Client Item -->
        </div>
    </div>

</section><!-- /Clients Section -->


<!-- Services Section -->
<section id="services" class="services section">

    <div class="container">

        <div class="row gy-4">

            <div class="col-md-6" data-aos="fade-up" data-aos-delay="100">
                <div class="service-item d-flex position-relative h-100">
                    <i class="bi bi-house-door icon flex-shrink-0"></i>
                    <div>
                        <h4 class="title"><a href="#" class="stretched-link">Demir Kapı ve Korkuluk</a></h4>
                        <p class="description">Estetik ve güvenliği bir araya getiren ferforje ve çelik kapılar, balkon ve merdiven korkulukları.</p>
                    </div>
                </div>
            </div><!-- End Service Item -->

            <div class="col-md-6" data-aos="fade-up" data-aos-delay="200">
                <div class="service-item d-flex position-relative h-100">
                    <i class="bi bi-building icon flex-shrink-0"></i>
                    <div>
                        <h4 class="title"><a href="#" class="stretched-link">Çelik Konstrüksiyon</a></h4>
                        <p class="description">Fabrika, depo, hangar ve endüstriyel yapılar için dayanıklı çelik konstrüksiyon sistemleri.</p>
                    </div>
                </div>
            </div><!-- End Service Item -->

            <div class="col-md-6" data-aos="fade-up" data-aos-delay="300">
                <div class="service-item d-flex position-relative h-100">
                    <i class="bi bi-tools icon flex-shrink-0"></i>
                    <div>
                        <h4 class="title"><a href="#" class="stretched-link">Kaynak ve Metal İşleme</a></h4>
                        <p class="description">Argon, gaz altı ve elektrik ark kaynağı ile dayanıklı ve sağlam metal işçiliği.</p>
                    </div>
                </div>
            </div><!-- End Service Item -->

            <div class="col-md-6" data-aos="fade-up" data-aos-delay="400">
                <div class="service-item d-flex position-relative h-100">
                    <i class="bi bi-truck icon flex-shrink-0"></i>
                    <div>
                        <h4 class="title"><a href="#" class="stretched-link">Tente ve Sundurma Sistemleri</a></h4>
                        <p class="description">Ev ve iş yerleriniz için dayanıklı tente, sundurma ve gölgelik sistemleri üretimi.</p>
                    </div>
                </div>
            </div><!-- End Service Item -->

            <div class="col-md-6" data-aos="fade-up" data-aos-delay="500">
                <div class="service-item d-flex position-relative h-100">
                    <i class="bi bi-shield-lock icon flex-shrink-0"></i>
                    <div>
                        <h4 class="title"><a href="#" class="stretched-link">Güvenlik ve Panel Çit</a></h4>
                        <p class="description">Özel tasarım güvenlik çitleri, panel çit sistemleri ve bahçe korkulukları.</p>
                    </div>
                </div>
            </div><!-- End Service Item -->

            <div class="col-md-6" data-aos="fade-up" data-aos-delay="600">
                <div class="service-item d-flex position-relative h-100">
                    <i class="bi bi-brush icon flex-shrink-0"></i>
                    <div>
                        <h4 class="title"><a href="#" class="stretched-link">Metal Boyama ve Kaplama</a></h4>
                        <p class="description">Elektrostatik toz boya ve paslanmaz çelik kaplama hizmetleri.</p>
                    </div>
                </div>
            </div><!-- End Service Item -->

        </div>

    </div>

</section><!-- /Services Section -->


<!-- ProjectsSection -->
<section id="portfolio" class="portfolio section">
    <!-- Section Title -->
    <div class="container section-title" data-aos="fade-up">
        <h2>PROJELERİMİZ</h2>
        <p>Avanlar Metal - Projeler</p>
    </div><!-- End Section Title -->

    <div class="container">
        <div class="isotope-layout" data-default-filter="*" data-layout="masonry" data-sort="original-order">
            <ul class="portfolio-filters isotope-filters" data-aos="fade-up" data-aos-delay="100">
                @{
                    if (ViewBag.Categories != null)
                    {
                        for (int i = -1; i < ViewBag.Categories.Count; i++)
                        {
                            if (i == -1)
                            {
                                <li data-filter="*" class="filter-active">Tüm Projeler</li>  
                            }
                            else
                            {
                                var category = ViewBag.Categories[i];
                                <li data-filter=".filter-@category.CategoryId">@category.Category</li>  
                            }
                        }
                    }
                }
            </ul><!-- End Portfolio Filters -->

            <div class="row gy-4 isotope-container" data-aos="fade-up" data-aos-delay="200">

      
                @{
                    if (ViewBag.Products != null)
                    {
                        for (int i = 0; i < ViewBag.Products.Count; i++)
                        {
                            var product = ViewBag.Products[i];
                            <div class="col-lg-4 col-md-6 portfolio-item isotope-item filter-@product.CategoryId">
                                <img src="@product.img1" class="img-fluid" alt="">
                                <div class="portfolio-info">
                                    <h4>@product.Category</h4>
                                    <p>Lorem ipsum, dolor sit</p>
                                    <a href="@product.img1" title="App 1" data-gallery="portfolio-gallery-app" class="glightbox preview-link"><i class="bi bi-zoom-in"></i></a>
                                    <a href="/projelerimiz/detay?proje=15" title="More Details" class="details-link"><i class="bi bi-link-45deg"></i></a>
                                </div>
                            </div>
                        }
                    }
                }

            </div><!-- End Portfolio Container -->

        </div>

    </div>

</section><!-- /Projects Section -->


